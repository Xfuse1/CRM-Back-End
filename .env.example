# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Demo Owner ID (temporary - will be replaced with real auth)
DEMO_OWNER_ID=00000000-0000-0000-0000-000000000000

# JWT Configuration (for future authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Client Configuration
CLIENT_ORIGIN=http://localhost:3000

# WhatsApp Client Configuration
# Set to 'true' to use Baileys (database-backed sessions - recommended for production)
# Set to 'false' to use whatsapp-web.js (file-based sessions - for local development)
USE_BAILEYS=false

# Prisma Database URL (for Baileys session storage)
# Get this from Supabase Dashboard > Settings > Database > Connection String
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"
